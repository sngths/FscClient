<manifest package="com.tianxing.fscteachersedition"
          xmlns:android="http://schemas.android.com/apk/res/android">


    <uses-feature android:name="android.software.leanback" android:required="false"/>

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".FscApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.tianxing.view.activity.LoadingActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <category android:name="android.intent.category.LEANBACK_LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.tianxing.view.activity.MainActivity"
                  android:screenOrientation="portrait">
        </activity>

    </application>

</manifest>
