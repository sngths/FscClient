<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/toolbar_child"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1">
    </android.support.v7.widget.RecyclerView>
    <!-- 输入框 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#BCBCBC"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/imageButton_more"
            android:layout_gravity="center_horizontal"
            android:layout_width="56dp"
            android:layout_height="48dp"/>
        <EditText
            android:id="@+id/editText_input"
            android:layout_width="1dp"
            android:layout_height="@dimen/chat_editText_height"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/imageButton_send"
            android:layout_gravity="center_horizontal"
            android:layout_width="65dp"
            android:layout_height="48dp"/>
    </LinearLayout>
    <!-- 输入数据类型选择框 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout_item_select">
        <ImageButton
            android:id="@+id/imageButton_picture"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
        <ImageButton
            android:id="@+id/imageButton_capture"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
        <ImageButton
            android:id="@+id/imageButton_record"
            android:layout_width="56dp"
            android:layout_height="56dp"/>

    </LinearLayout>

</LinearLayout>