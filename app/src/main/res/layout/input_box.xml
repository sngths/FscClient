<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <!-- 输入框 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/background_primary_white"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/imageButton_more"
            android:layout_width="32dp"
            android:padding="4dp"
            android:layout_margin="8dp"
            android:background="@mipmap/ic_inputbox_more"
            android:layout_height="32dp"/>
        <EditText
            android:id="@+id/editText_input"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:maxLines="2"
            android:theme="@style/Theme.App.Base"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/imageButton_send"
            android:text="发送"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_background_primary"
            android:layout_width="64dp"
            android:layout_height="32dp"
            />
    </LinearLayout>
    <!-- 输入数据类型选择框 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout_item_select">
        <ImageButton
            android:id="@+id/imageButton_picture"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
        <ImageButton
            android:id="@+id/imageButton_capture"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
        <ImageButton
            android:id="@+id/imageButton_record"
            android:layout_width="56dp"
            android:layout_height="56dp"/>

    </LinearLayout>

</LinearLayout>