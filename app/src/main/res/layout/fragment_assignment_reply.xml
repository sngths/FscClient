<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="@color/background_primary"
              android:layout_height="match_parent">
    <include layout="@layout/toolbar_child"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_primary">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_primary_white">
                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="4dp"
                    android:background="@null"
                    android:layout_margin="12dp"
                    android:id="@+id/imageButton_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/Subheading_TextSize"
                    android:padding="4dp"
                    android:id="@+id/textView_username"
                    android:layout_alignTop="@+id/imageButton_icon"
                    android:layout_toEndOf="@+id/imageButton_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8-25"
                    android:textColor="@color/colorPrimary"
                    android:padding="4dp"
                    android:id="@+id/textView_date"
                    android:layout_alignStart="@+id/textView_username"
                    android:layout_below="@+id/textView_username"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:40"
                    android:textColor="@color/colorPrimary"
                    android:padding="4dp"
                    android:id="@+id/textView_time"
                    android:layout_alignBottom="@+id/textView_date"
                    android:layout_toEndOf="@+id/textView_date"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_content"
                    android:text="正文"
                    android:padding="4dp"
                    android:layout_marginStart="12dp"
                    android:layout_below="@+id/imageButton_icon"/>
                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:id="@+id/imageButton_picture"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="12dp"
                    android:padding="4dp"
                    android:layout_below="@+id/textView_content"/>
                <!--<ImageButton
                    android:layout_width="72dp"
                    android:layout_height="32dp"
                    android:id="@+id/imageButton_audio"
                    android:layout_below="@+id/imageButton_picture"
                    android:layout_marginStart="12dp"
                    android:padding="4dp"
                    android:layout_marginBottom="12dp"/>-->

            </RelativeLayout>
            <!-- 批阅 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_primary_white"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作业得分 :"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/Subheading_TextSize"
                    android:id="@+id/textView6"
                    android:layout_marginStart="12dp"
                    android:padding="4dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"/>

                <CheckBox
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="4dp"
                    android:button="@drawable/checkbox_background"
                    android:text="@null"
                    android:id="@+id/checkBox1"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/textView6"
                    android:checked="false"/>

                <CheckBox
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="4dp"
                    android:layout_marginStart="8dp"
                    android:button="@drawable/checkbox_background"
                    android:text="@null"
                    android:id="@+id/checkBox2"
                    android:layout_toEndOf="@+id/checkBox1"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentTop="true"/>

                <CheckBox
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="4dp"
                    android:layout_marginStart="8dp"
                    android:button="@drawable/checkbox_background"
                    android:text="@null"
                    android:id="@+id/checkBox3"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/checkBox2"/>

                <CheckBox
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="4dp"
                    android:layout_marginStart="8dp"
                    android:button="@drawable/checkbox_background"
                    android:text="@null"
                    android:id="@+id/checkBox4"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/checkBox3"/>

                <CheckBox
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="4dp"
                    android:layout_marginStart="8dp"
                    android:button="@drawable/checkbox_background"
                    android:text="@null"
                    android:id="@+id/checkBox5"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/checkBox4"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/Medium_TextSize"
                    android:hint="输入评语"
                    android:padding="8dp"
                    android:minLines="5"
                    android:gravity="top"
                    android:background="@drawable/edittext_assignment_remark_background"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:id="@+id/editText_remark"
                    android:layout_below="@+id/textView6"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>